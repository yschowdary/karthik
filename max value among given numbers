	if(a>b)
	{
		if(b>c) printf("the maximum number is %d",a);
		else if(b<c) printf("the maximum number is %d",a);
		else printf("invalid");
	}
	if(b>c)
	{
	if(a>c) printf("the maximum number is %d",b);
		else if(a<c) printf("the maximum number is %d",b);
		else printf("invalid");
	}
	if(c>a){
	
		if(a>b) printf("the maximum number is %d",c);
		else if(a<b) printf("the maximum number is %d",c);
		else printf("invalid");
	}
